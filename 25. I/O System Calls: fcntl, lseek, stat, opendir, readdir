#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd = open("demo.txt", O_RDWR);
    if (fd < 0) { perror("open"); return 1; }

    fcntl(fd, F_SETFL, O_APPEND);
    lseek(fd, 0, SEEK_END);
    write(fd, "Appended text\n", 14);
    close(fd);

    struct stat st;
    stat("demo.txt", &st);
    printf("Size: %ld bytes\n", st.st_size);

    DIR *dir = opendir(".");
    struct dirent *entry;
    printf("Directory listing:\n");
    while ((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }
    closedir(dir);

    return 0;
}
