#include <stdio.h>

struct Process {
    int id, bt, rt, priority, wt, tat;
};

int main() {
    int n, completed = 0, time = 0, min_priority;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];
    for (int i = 0; i < n; i++) {
        printf("Enter BT and Priority for P%d: ", i);
        p[i].id = i;
        scanf("%d%d", &p[i].bt, &p[i].priority);
        p[i].rt = p[i].bt;
    }

    printf("\nGantt Chart:\n");
    while (completed < n) {
        int idx = -1, highest = -1;
        for (int i = 0; i < n; i++) {
            if (p[i].rt > 0 && p[i].priority > highest) {
                highest = p[i].priority;
                idx = i;
            }
        }

        if (idx != -1) {
            printf("| P%d ", p[idx].id);
            p[idx].rt--;
            time++;
            if (p[idx].rt == 0) {
                completed++;
                p[idx].tat = time;
                p[idx].wt = p[idx].tat - p[idx].bt;
            }
        } else {
            time++;
        }
    }

    printf("|\n\nPID\tBT\tPriority\tWT\tTAT\n");
    for (int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t\t%d\t%d\n", p[i].id, p[i].bt, p[i].priority, p[i].wt, p[i].tat);
    }
    return 0;
}
