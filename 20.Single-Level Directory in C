#include <stdio.h>
#include <string.h>

struct File {
    char name[20];
};

int main() {
    struct File dir[10];
    int n = 0;
    char fname[20];

    while(1) {
        int choice;
        printf("\n1.Create File\n2.Delete File\n3.Search File\n4.Display\n5.Exit\nEnter Choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                printf("Enter filename: ");
                scanf("%s", fname);
                strcpy(dir[n++].name, fname);
                break;
            case 2:
                printf("Enter filename to delete: ");
                scanf("%s", fname);
                for(int i = 0; i < n; i++) {
                    if(strcmp(dir[i].name, fname) == 0) {
                        strcpy(dir[i], dir[n-1]);
                        n--;
                        printf("Deleted\n");
                        break;
                    }
                }
                break;
            case 3:
                printf("Enter filename to search: ");
                scanf("%s", fname);
                for(int i = 0; i < n; i++) {
                    if(strcmp(dir[i].name, fname) == 0) {
                        printf("File found\n");
                        break;
                    }
                }
                break;
            case 4:
                printf("Files:\n");
                for(int i = 0; i < n; i++)
                    printf("%s\n", dir
