#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd = open("demo.txt", O_CREAT | O_WRONLY, 0644);
    if (fd < 0) {
        perror("open");
        return 1;
    }

    write(fd, "Hello, UNIX file system!\n", 25);
    close(fd);

    fd = open("demo.txt", O_RDONLY);
    char buffer[100];
    read(fd, buffer, sizeof(buffer));
    printf("File content: %s\n", buffer);
    close(fd);

    return 0;
}
