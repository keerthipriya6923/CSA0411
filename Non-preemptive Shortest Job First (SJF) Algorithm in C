#include <stdio.h>

struct Process {
    int id, burst, waiting, turnaround;
};

int main() {
    int n, i, j;
    struct Process p[10], temp;
    
    printf("Enter number of processes: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        p[i].id = i+1;
        printf("Enter Burst Time for P%d: ", i+1);
        scanf("%d", &p[i].burst);
    }

    // Sort by Burst Time
    for(i = 0; i < n-1; i++) {
        for(j = i+1; j < n; j++) {
            if(p[i].burst > p[j].burst) {
                temp = p[i];
                p[i] = p[j];
                p[j] = temp;
            }
        }
    }

    p[0].waiting = 0;
    for(i = 1; i < n; i++) {
        p[i].waiting = p[i-1].waiting + p[i-1].burst;
    }

    for(i = 0; i < n; i++) {
        p[i].turnaround = p[i].waiting + p[i].burst;
    }

    printf("\nProcess\tBT\tWT\tTAT\n");
    for(i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n", p[i].id, p[i].burst, p[i].waiting, p[i].turnaround);
    }

    return 0;
}
